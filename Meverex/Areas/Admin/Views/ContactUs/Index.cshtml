@model IEnumerable<Meverex.Models.ContactUs>

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <div class="card-header">
        <a href="@Url.Action("create")" class="btn btn-outline-primary">New Contact</a>
    </div>
    <div class="card-body">

        <table class="table table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Tittle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Photo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Desc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Number)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tittle)
                    </td>
                    <td>
                        <img src="~/Public/images/@item.Photo" width="150" height="50" class="bg-dark" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Desc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        <a href="@Url.Action("edit",new { id = item.Id })">
                            <i class="fas fa-pencil-alt"></i>
                        </a>

                        <a  href="@Url.Action("delete",new { id = item.Id })" class="text-danger sweet-delete">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
@section scripts {
    <script>
        $(document).ready(function () {
            $(".sweet-delete").click(function (event) {
                event.preventDefault();
                var sweet = $(this);
                Swal.fire({
                    title: 'Eminsiniz?',
                    text: "Melumatlariniz Silinecek",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Beli'
                }).then((result) => {
                    if (result.value) {
                        $.ajax({
                            url: sweet.attr("href"),
                            success: function () {
                                Swal.fire(
                                    'Deactivated!',
                                    'Your file has been deactivated.',
                                    'success'
                                ).then(function (result) {
                                    if (result.value) {
                                        location.reload();
                                    }
                                })
                            }
                        });
                    }
                })
            });
        });
    </script>
}
