 @model NewsViewModel
    <!--Breadcrumb-->
<section class="breadcrumb-section gray-bg-2">
    <div class="container">
        <div class="row">
            <div class="col">
                <ul>
                    <li><a href="#">Home</a></li>
                    <li><a href="#">Category</a></li>
                    <li>Sports</li>
                </ul>
                <div class="banner-title">
                    <h2>Sports</h2>
                </div>
            </div>
        </div>
    </div>
</section><!--/Breadcrumb-->
<!--Content Section-->
<section class="section-padding-2">
    <div class="container">
        <div class="row">
            <div class="col-xl-8 col-lg-8 col-md-6 col-sm-6">
                <div class="row">
                    <div class="col-xl-12">
                        @foreach (var item in Model.News.)
                        {
                        <div class="row single-post-2">
                            <div class="col-xl-6">
                                <a href="#"><img src="~/Public/images/category/sports/@item.Photo" alt=""></a>
                            </div>
                            <div class="col-xl-6">
                                <div class="post-inside-content">
                                    <div class="category-tag"><a href="#" class="@item.Category.Color">@item.Category.Name</a></div>
                                    <h2><a href="#">@item.Tittle</a></h2>
                                    <p>@item.Description</p>
                                    <div class="post-meta">
                                        <a href="#" class="author">@item.Author.Name</a>
                                        <a href="#" class="date">@item.Date.ToString("MMM dd,yyy")</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        }
                        
                       
                    </div>
                </div>

            </div>
            <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6">
                <aside class="site-sidebar">
                    @{
                        Html.RenderPartial("~/Views/Shared/_Categories.cshtml");
                    }
                    @{
                        Html.RenderPartial("~/Views/Shared/_Lastest.cshtml");
                    }
                    @{
                        Html.RenderPartial("~/Views/Shared/_sociallink.cshtml");
                    }
                    @{
                        Html.RenderPartial("~/Views/Shared/_QuikLink.cshtml");
                    }
                </aside>
            </div>
        </div>
    </div>
</section><!--/Content Section-->
<!--Content Section-->
<section class="section-padding-2 gray-bg">
    <div class="container">

        @{
            Html.RenderPartial("~/Views/Shared/_Slider.cshtml");
        }
    </div>
</section><!--/Content Section-->